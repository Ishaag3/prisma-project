// Define the User model for storing user information
model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  password    String
  phoneNumber String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // Define a relation to the Order model
  orders      Order[]
}

// Define the Product model for storing product information
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  imageUrl    String
  // Define a relation to the OrderItem model
  orderItems  OrderItem[]
}

// Define the Order model for storing order information
model Order {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  total     Float
  status    String
  // Define a relation to the User model
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  // Define a relation to the OrderItem model
  orderItems OrderItem[]
}

// Define the OrderItem model for storing order item information
model OrderItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  // Define a relation to the Order model
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  // Define a relation to the Product model
  product   Product @relation(fields: [productId], references: [id])
  productId Int
}